<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.tomcat_air_test.servlet.HelloServlet</servlet-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>dogglee</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>123</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SetSessionServlet</servlet-name>
		<servlet-class>com.tomcat_air_test.servlet.SetSessionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SetSessionServlet</servlet-name>
		<url-pattern>/setSession</url-pattern>
	</servlet-mapping>	

	<servlet>
		<servlet-name>GetSessionServlet</servlet-name>
		<servlet-class>com.tomcat_air_test.servlet.GetSessionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetSessionServlet</servlet-name>
		<url-pattern>/getSession</url-pattern>
	</servlet-mapping>	

	<servlet>
		<servlet-name>ClientJumpServlet</servlet-name>
		<servlet-class>com.tomcat_air_test.servlet.ClientJumpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientJumpServlet</servlet-name>
		<url-pattern>/clientJump</url-pattern>
	</servlet-mapping>	

	<servlet>
		<servlet-name>ServerJumpServlet</servlet-name>
		<servlet-class>com.tomcat_air_test.servlet.ServerJumpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServerJumpServlet</servlet-name>
		<url-pattern>/ServerJump</url-pattern>
	</servlet-mapping>	

	<filter>
		<filter-name>logFilter</filter-name>
		<filter-class>com.tomcat_air_test.filter.LogFilter</filter-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>dogglee</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>123</param-value>
		</init-param>	
	</filter>
	<filter-mapping>
		<filter-name>logFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	

</web-app>